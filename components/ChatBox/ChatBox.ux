<Panel ux:Class="ChatBox">
  <JavaScript File="Chatbox.js" />

  <Rectangle Width="100%" Height="50" Fill="#FFF">
    <DropShadow Angle="0" Distance="0" Size="5" />
    <DockPanel>
      <IconSmile Dock="Left" FontSize="24" TextColor="Gray" Alignment="VerticalCenter" Margin="10,0,10,0" />
      <TextInput Alignment="VerticalCenter" PlaceholderText="Enter Answer" Value="{message}" PlaceholderColor="#CCC" />
      <Circle Dock="Right" Width="30" Height="30" Fill="#3D206A" Margin="10,0,10,0" Clicked="{enteredMessage}">
        <IconSend FontSize="14" TextColor="#FFF" Alignment="Center" />
      </Circle>
    </DockPanel>
  </Rectangle>
</Panel>
