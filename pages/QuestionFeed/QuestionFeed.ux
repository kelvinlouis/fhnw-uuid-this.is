<DockPanel ux:Class="QuestionFeed">
  <Panel Dock="Top" Width="100%" Height="0" /> 
  <ScrollView>
    <StackPanel>
      <StackPanel Padding="10" MinHeight="55" Color="DP400" ItemSpacing="10">
        <WrapPanel>
          <Each Items="{tags}">
            <Tag Clicked="{removeTag}" />
          </Each>
        </WrapPanel>
        <Autocomplete />
      </StackPanel>
  
      <StackPanel Padding="10" ItemSpacing="15">
        <Each Items="{results}">
          <QuestionItem />
        </Each>
      </StackPanel>
    </StackPanel>
  </ScrollView>
  <WhileEmpty Items="{results}">
    <Text TextWrapping="Wrap" Padding="10" TextAlignment="Center" Alignment="Center">There are no questions to show. Please adjust your topics, by adding or removing them.</Text>
  </WhileEmpty>
</DockPanel>
